@model TestMVC.Models.RegisterViewModel



<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="contact-title">Register</h2>
        </div>
        <div class="col-md-12">
            <form method="post" class="form-contact contact_form" asp-action="AddNewUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input class="form-control" asp-for="UserName" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DisplayName"></label>
                    <input class="form-control" asp-for="DisplayName" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                    <span class="text-danger"></span>
                </div>

                <input type="submit" value="Create" class="button button-contactForm boxed-btn" />
            </form>
        </div>
    </div>
</div>